<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName="RGK_lamp"]</xpath>
		<success>Always</success>
		<match Class="PatchOperationRemove">
			<xpath>/Defs/ThingDef[
					defName="RGK_lamp" or
					defName="RGK_LampM" or
					defName="GL_lamp_White" or
					defName="GL_LampM_White" or
					defName="RGK_Street_Lamp_L" or
					defName="RGK_Street_Lamp_Seven" or
					defName="GL_Street_Lamp_L_White" or
					defName="GL_Street_Lamp_Seven_White" or
					defName="GL_Wall_Lamp" or
					defName="GL_Wall_Lamp_White"
				]/comps/li[@Class="CompProperties_Refuelable"]</xpath>
			</match>
		</Operation>

	<Operation Class="PatchOperationRemove">
		<success>Always</success>
		<xpath>/Defs/ThingDef[
				defName="TorchLamp"
			]/comps/li[@Class="CompProperties_Refuelable"]</xpath>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Medieval</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[
							defName = "VFEM_WallTorchLamp" or
							defName = "VFEM_Candle"
						]/comps/li[@Class="CompProperties_Refuelable"]
					</xpath>
				</li>
			</operations>
		</match>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Medieval - Less Wood Please</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[
							defName = "MetalTorchLamp"
						]/comps/li[@Class="CompProperties_Refuelable"]
					</xpath>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
